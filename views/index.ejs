<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/styles/style.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <title>Document</title>
</head>

<body>

    <!-- Navbar component -->
    <nav class="bg-white shadow-md py-4">
        <div class="container mx-auto flex justify-center items-center">
            <div class="flex items-center space-x-3">
                <img src="https://bharatintern.live/static/logo-d7abe237292b840869fa4f33f0e74976.png" alt="Logo" class="w-24">
                <span class="text-medium font-semibold text-gray-700">Internship Assessment</span>
            </div>
        </div>
    </nav>

    <!-- WebApp Title -->
    <div class="mt-16 mx-8">
        <h1 class="mb-4 text-3xl font-extrabold text-gray-900 dark:text-white md:text-5xl lg:text-5xl"><span
                class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">Money Tracker</span>
            WebApp</h1>
        <p class="text-lg font-normal text-gray-500 lg:text-xl dark:text-gray-600">A Money Tracker Web App that stores
            your daily-life expenses and income.</p>
    </div>

    <!-- WebApp components -->
    <div class="mt-14 mx-8">
        <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
            <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                <thead
                    class="text-xs text-gray-700 uppercase bg-gradient-to-r from-cyan-500 to-blue-500 dark:bg-blue-600 dark:text-white">
                    <tr>
                        <th scope="col" class="px-6 py-3">
                            Description
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Amount
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Type
                        </th>
                        <!-- <th scope="col" class="px-6 py-3">
                            Temp_name
                        </th> -->
                        <th scope="col" class="px-6 py-3">
                            Action
                        </th>
                    </tr>
                </thead>


                <tbody>
                    <% transactions.forEach(transaction=> { %>
                        <tr class="bg-white border-b dark:bg-white dark:border-slate-400 text-zinc-600 font-[600]">

                            <td class="px-6 py-4">
                                <%= transaction.description %>
                            </td>
                            <td class="px-6 py-4">
                                <%= transaction.amount %>
                            </td>
                            <td class="px-6 py-4">
                                <%= transaction.type %>
                            </td>
                            <td class="px-6 py-4">
                                <a href="/edit-transaction/<%= transaction._id %>"
                                    class="inline-flex items-center font-medium text-blue-600 dark:text-blue-500 hover:underline gap-1">
                                    Edit
                                    <ion-icon name="duplicate-outline" class="w-4 h-4 me-2"></ion-icon>
                                </a>/
                                <a href="/delete-transaction/<%= transaction._id %>"
                                    class="inline-flex items-center font-medium text-blue-600 dark:text-blue-500 hover:underline gap-1">
                                    Delete
                                    <ion-icon name="trash-outline" class="w-4 h-4 me-2"></ion-icon>
                                </a>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    </div>

    <div class="mt-4 mx-8">

        <!-- <button type="button"
            class="text-white bg-[#24292F] hover:bg-[#24292F]/90 focus:ring-4 focus:outline-none focus:ring-[#24292F]/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:focus:ring-gray-500 dark:hover:bg-[#050708]/30 me-2 mb-2">
            <ion-icon name="duplicate-outline" class="w-4 h-4 me-2"></ion-icon>
            <a href="/add-transaction">
                Add New Transaction
            </a>
        </button> -->

        <button type="button"
            class="text-white bg-gradient-to-r from-sky-500 to-indigo-500 hover:bg-blue-800 font-semibold rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gradient-to-r from-sky-500 to-indigo-500 dark:hover:bg-gradient-to-r from-sky-500 to-indigo-500 text-center inline-flex items-center">
            <ion-icon name="duplicate-outline" class="w-4 h-4 me-2"></ion-icon>
            <a href="/add-transaction">
                Add New Transaction
            </a>
        </button>


        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                // Access the income and expenses variables from the server
                var income = JSON.stringify(income);
                var expenses = JSON.stringify(expenses);

                var ctx = document.getElementById("pieChart").getContext("2d");

                var data = {
                    datasets: [{
                        data: [expenses, income],
                        backgroundColor: ['red', 'green'],
                    }],
                    labels: ['Expenses', 'Income'],
                };

                var options = {
                    responsive: true,
                    maintainAspectRatio: false,
                };

                var myPieChart = new Chart(ctx, {
                    type: 'pie',
                    data: data,
                    options: options,
                });
            });
        </script>


    </div>

    <!-- Ionicons script -->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>

</html>